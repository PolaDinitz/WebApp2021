@{
    ViewBag.Title = ViewBag.ErrorMessage;
}

<style>
    .row {
        text-align: center;
    }
    .img-circle {
        max-height: 400px;
        width: 100%;
    }
</style>

<div class="row">
    <div class="col-md-4">
        <h2 class="text-danger">Error @Context.Response.StatusCode: @ViewBag.ErrorMessage</h2>
    </div>
</div>
<div class="row">
    <div class="col-md-offset-3 col-md-6">
        <img src="https://getdrawings.com/free-icon/danger-icon-57.png" class="img-circle" />
    </div>
</div>
<div class="row">
    <div class="col-md-offset-10 col-md-1">
        <a>@Html.ActionLink("Go Home", "Index", "Home", null, new { @class = "btn btn-link btn-md" })</a>
    </div>
</div>